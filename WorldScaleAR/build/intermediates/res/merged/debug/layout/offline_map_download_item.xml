<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:descendantFocusability="blocksDescendants"
    android:background="#FFFFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/offline_map_download_item_left"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/offline_map_dp_10_in_sw320dp"
            android:paddingTop="@dimen/offline_map_dp_10_in_sw320dp">
            <LinearLayout
                android:id="@+id/offline_map_title_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offline_map_dp_20_in_sw320dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/offline_map_download_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/offline_map_text_color"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="北京市" />

                <TextView
                    android:id="@+id/offline_map_download_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/offline_map_dp_10_in_sw320dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/offline_map_text_color"
                    android:textSize="10sp"
                    android:text="fffffffffffffffffffffff"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_marginRight="@dimen/offline_map_dp_20_in_sw320dp">

                <TextView
                    android:id="@+id/offline_map_download_item_flow_size"
                    android:paddingRight="@dimen/offline_map_dp_10_in_sw320dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/offline_map_text_color"
                    android:textSize="12sp"
                    android:text="100MB" />

                <com.dji.mapkit.offlinemap.OfflineMapRL
                    android:id="@+id/offline_map_download_ly"
                    android:padding="@dimen/offline_map_dp_10_in_sw320dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/offline_map_download_item_state"
                        android:layout_width="@dimen/offline_map_dp_50_in_sw320dp"
                        android:layout_height="@dimen/offline_map_dp_30_in_sw320dp"
                        android:textSize="15sp"
                        android:textColor="@color/offline_map_text_color"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:focusable="false"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/offline_map_download_item_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/offline_map_arrow_down"/>
                    </com.dji.mapkit.offlinemap.OfflineMapRL>
            </LinearLayout>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/offline_map_download_progressbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/offline_map_dp_7_in_sw320dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:indeterminate="false"
            android:indeterminateOnly="false"
            android:background="@color/offline_divider_gray"
            android:maxHeight="@dimen/offline_map_dp_7_in_sw320dp"
            android:minHeight="@dimen/offline_map_dp_7_in_sw320dp"
            android:progressDrawable="@drawable/offline_map_download_progress_horizontal"
            android:padding="0dp"
            android:max="100"
            android:progress="0"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/offline_map_download_item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@color/offline_map_item_delete_red">

        <ImageView
            android:id="@+id/offline_map_download_item_right_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/offline_map_item_delet" />
    </RelativeLayout>
</LinearLayout>