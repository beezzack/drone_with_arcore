<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/offline_map_dialog_view"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@drawable/offline_map_stroke_dlg_dark_bg"
    android:layout_width="@dimen/offline_map_dlg_width"
    android:layout_height="@dimen/offline_map_dlg_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/offline_map_dialog_title"
            android:paddingTop="@dimen/offline_map_dp_25_in_sw320dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#212121"
            android:text="fadsfasdfasd"/>

        <TextView
            android:id="@+id/offline_map_dialog_content"
            android:paddingTop="@dimen/offline_map_dp_20_in_sw320dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#212121"
            android:gravity="center"
            android:text="fadsfasdfasdfasdfasdfsad"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/offline_map_dp_7_in_sw320dp"
        android:background="#e7e2e2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/offline_map_dp_50_in_sw320dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/offline_map_dialog_cancel"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="@string/offline_map_cancel_text"
            android:layout_height="@dimen/offline_map_dp_50_in_sw320dp"
            android:layout_weight="1"/>
        <View
            android:id="@+id/offline_map_dialog_split_line"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:background="#e7e2e2"/>

        <TextView
            android:id="@+id/offline_map_dialog_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/offline_map_dp_50_in_sw320dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="@string/offline_map_confirm_text"/>
    </LinearLayout>

</LinearLayout>