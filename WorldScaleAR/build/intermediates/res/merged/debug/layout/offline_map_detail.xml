<?xml version="1.0" encoding="utf-8"?>
<dji.offlinemap.amap.OfflineMapDetailView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/offline_map_detail_ly"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingLeft="50dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/offline_map_detail_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="北京市"/>
        <TextView
            android:id="@+id/offline_map_detail_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="更新时间:2016.12.26"/>

        <TextView
            android:id="@+id/offline_map_detail_map_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100MB"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:paddingTop="50dp">
        <TextView
            android:id="@+id/offline_map_detail_content"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="gfdsgfdsg"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/offline_map_detail_update_bt"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="已更新"
            android:gravity="center"/>
        <Button
            android:id="@+id/offline_map_detail_preview_bt"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="查看地图"
            android:gravity="center"/>
        <Button
            android:id="@+id/offline_map_detail_delete_bt"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="删除"
            android:gravity="center"/>
    </LinearLayout>

</dji.offlinemap.amap.OfflineMapDetailView>