<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/offline_map_dp_44_in_sw320dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/offline_map_head_first_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/offline_map_dp_10_in_sw320dp"
            android:src="@drawable/offline_map_back"/>


        <TextView
            android:id="@+id/offline_map_head_first_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/offline_map_download_title"
            android:textColor="@color/offline_map_text_color"
            android:textSize="@dimen/offline_map_title_size" />
        <TextView
            android:id="@+id/offline_map_head_first_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/offline_map_manager"
            android:textColor="@color/offline_map_text_color"
            android:textSize="@dimen/offline_map_manager_title_size"
            android:layout_marginRight="@dimen/offline_map_dp_10_in_sw320dp" />

    </RelativeLayout>

</LinearLayout>